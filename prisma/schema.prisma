generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Album {
  id          String  @id @default(ulid()) @db.VarChar(26)
  title       String  @db.VarChar(255)
  description String?

  createdAt DateTime  @default(now()) @map("created_at")
  createdBy String?   @map("created_by") @db.VarChar(36)
  updatedAt DateTime  @updatedAt @map("updated_at")
  updatedBy String?   @map("updated_by") @db.VarChar(36)
  deletedAt DateTime? @map("deleted_at")
  deletedBy String?   @map("deleted_by") @db.VarChar(36)

  photos Photo[]

  @@map("albums")
}

model Photo {
  id          String    @id @default(ulid()) @db.VarChar(26)
  title       String    @db.VarChar(255)
  description String?
  url         String
  color       String    @db.VarChar(7)
  acquireAt   DateTime? @map("aquired_at")
  metadata    Json?
  albumId     String    @map("album_id") @db.VarChar(26)
  album       Album     @relation(fields: [albumId], references: [id], onDelete: Cascade)

  createdAt DateTime  @default(now()) @map("created_at")
  createdBy String?   @map("created_by") @db.VarChar(36)
  updatedAt DateTime  @updatedAt @map("updated_at")
  updatedBy String?   @map("updated_by") @db.VarChar(36)
  deletedAt DateTime? @map("deleted_at")
  deletedBy String?   @map("deleted_by") @db.VarChar(36)

  @@unique([url], name: "uniq_photo_url")
  @@index([albumId], name: "idx_photo_album_id")
  @@map("photos")
}
